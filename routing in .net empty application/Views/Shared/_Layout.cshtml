<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRw2vvoC2f3BVRxtjALP7rFIs4uVfaOCa5a0vBxBv" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <header>
            <h1 class="text-center">@ViewData["Title"]</h1>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted text-center py-3">
            &copy; @DateTime.Now.Year - My ASP.NET Core Application
        </footer>
    </div>

    <!-- Bootstrap JS and Popper.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-5SVpDZ7TdxsZb0YWf1exvcXmwdWckPhgsNH5RWxXzW/C3f4NiwvRijERlHgEfrwy" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
